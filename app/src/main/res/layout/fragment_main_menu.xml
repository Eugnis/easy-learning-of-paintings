<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context="com.eugnis.easylearningofpaintings.MainMenuFragment">

    <ImageView
        android:id="@+id/bg_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ContentDescription"
        android:src="@drawable/background1"

        android:scaleType="centerCrop" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:id="@+id/relative_layout_menu"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/imageViewLogo"
            android:layout_centerHorizontal="true">


            <Button
                android:id="@+id/menubtn_randomArticle"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/menu_randomArticle"
                android:background="@drawable/menu_btn"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="18sp"
                android:lineSpacingExtra="10sp"
                android:fontFamily="monospace"
                android:textStyle="normal|bold"
                android:onClick="openRandomArticle" />

            <Button
                android:id="@+id/menubtn_styles"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/menu_styles"
                android:background="@drawable/menu_btn"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="18sp"
                android:lineSpacingExtra="10sp"
                android:fontFamily="monospace"
                android:textStyle="normal|bold"
                android:onClick="openStyles" />

            <Button
                android:id="@+id/menubtn_painters"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/menu_painters"
                android:background="@drawable/menu_btn"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="18sp"
                android:lineSpacingExtra="10sp"
                android:fontFamily="monospace"
                android:textStyle="normal|bold"
                android:onClick="openPainters" />

            <Button
                android:id="@+id/menubtn_guessgame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_guessGame"
                android:background="@drawable/menu_btn"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="18sp"
                android:lineSpacingExtra="10sp"
                android:fontFamily="monospace"
                android:textStyle="normal|bold"
                android:onClick="openGuessGame" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="209dp"
            app:srcCompat="@drawable/title"
            android:id="@+id/imageViewLogo"
            android:layout_marginTop="11dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</FrameLayout>
